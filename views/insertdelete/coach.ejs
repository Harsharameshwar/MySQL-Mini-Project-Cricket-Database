        <tr>
    
            <td><%= pos?.coach_id%></td>
            <td><%= pos?.team_id%></td>
            <td><%= pos?.coach_name%></td>
            <td><a href="delete/<%=tablename%>/coach_id/<%= pos?.coach_id %>" class="btn btn-danger">Delete</a></td>
        </tr>
  <%  })  %>
 <% }) %>
 <form action="/<%=tablename%>/getdetails" method="post">
     
    <tr>
        <td> <input  class="form-control" type="text" name="coach_id" autocomplete="off"></td>
        <td> <input  class="form-control" type="text" name="team_id" autocomplete="off"></td>
