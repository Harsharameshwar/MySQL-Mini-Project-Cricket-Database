<%- include("../partials/editheader"); -%>
<h2 class="heading-section">Table <%= tablename %> </h2>
</div>
</div>
<div class="row">
<div class="col-md-12">
<div class="table-wrap">
<table class="table table-striped">
<thead>
    <tr>
        <th>captain_id</th>
        <th>captain_name</th>
        <th>team_id</th>
        <th>player_id</th>
        <th>year_of_captaincy</th>
        <th>no_of_wins</th>
        <th>action</th>
    </tr>
</thead>
<tbody>
    
    <%  posts.forEach(function(post){ %>
    <%  post.forEach(function(pos){ %>
        <form action="/<%= tablename %>/captain_id/<%=pos?.captain_id%>/save/getdetails" method="post">
        <tr>
            <td> <input  class="form-control" type="text" name="captain_id" autocomplete="off" value="<%= pos?.captain_id%>"></td>
            <td> <input  class="form-control" type="text" name="captain_name" autocomplete="off" value="<%= pos?.captain_name%>"></td>
            <td> <input  class="form-control" type="text" name="team_id" autocomplete="off" value="<%= pos?.team_id%>"></td>
            <td> <input  class="form-control" type="text" name="player_id" autocomplete="off" value="<%= pos?.player_id%>"></td>
            <td> <input  class="form-control" type="text" name="year_of_captaincy" autocomplete="off" value="<%= pos?.year_of_captaincy%>"></td>
            <td> <input  class="form-control" type="text" name="no_of_wins" autocomplete="off" value="<%= pos?.no_of_wins%>"></td>
            <td><button type="submit"class="btn btn-light">Submit data</button></td>
        </tr>
    </form>
  <%  })  %>
 <% }) %>
<%- include("../partials/editfooter"); -%>

