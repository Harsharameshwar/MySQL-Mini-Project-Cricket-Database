<div class="row">
<div class="col-md-12">
<div class="table-wrap">
<table class="table table-striped">
<thead>
    <tr>
        <th>match_id</th>
        <th>match_date</th>
        <th>match_time</th>
        <th>team_1_name</th>
        <th>team_2_name</th>
        <th>loser</th>
        <th>winner</th>
        <th>stadium</th>
        <th>umpire_id</th>
    </tr>
</thead>
<tbody>
    
    <%  posts.forEach(function(post){ %>
    <%  post.forEach(function(pos){ %>

        <tr>
    
            <td><%= pos?.match_id%></td>
            <td><%= pos?.match_date%></td>
            <td><%= pos?.match_time%></td>
            <td><%= pos?.team_1_name%></td>
            <td><%= pos?.team_2_name%></td>
            <td><%= pos?.loser%></td>
            <td><%= pos?.winner%></td>
            <td><%= pos?.stadium%></td>
            <td><%= pos?.umpire_id%></td>
        </tr>
  <%  })  %>
 <% }) %>
